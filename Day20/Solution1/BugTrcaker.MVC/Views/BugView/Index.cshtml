@model IEnumerable<BugTrcaker.MVC.Models.BugViewModel>

@{
    ViewData["Title"] = "Bugs";
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Created On</th>
            <th>Project ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center">No bugs found.</td>
            </tr>
        }
        else
        {
            @foreach (var bug in Model)
            {
                <tr>
                    <td>@bug.Id</td>
                    <td>@bug.Title</td>
                    <td>@bug.Description</td>
                    <td>@bug.Status</td>
                    <td>@bug.CreatedOn.ToString("yyyy-MM-dd")</td>
                    <td>@bug.ProjectId</td>
                    <td><a asp-action="Details" asp-route-id="@bug.Id" class="btn btn-sm btn-primary">Details</a></td>
                </tr>
            }
        }
    </tbody>
</table>
