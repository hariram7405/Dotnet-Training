@model BugTrcaker.MVC.Models.BugViewModel

@{
    ViewData["Title"] = $"Bug Details - {Model.Title}";
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">ID:</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Title:</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Description:</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Status:</dt>
    <dd class="col-sm-10">@Model.Status</dd>

    <dt class="col-sm-2">Created On:</dt>
    <dd class="col-sm-10">@Model.CreatedOn.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Project ID:</dt>
    <dd class="col-sm-10">@Model.ProjectId</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
