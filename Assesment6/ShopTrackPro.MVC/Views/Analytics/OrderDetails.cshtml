@model List<ShopTrackPro.MVC.Models.OrderDetailsViewModel>
@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <h2>Order Details</h2>
    
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>Product</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Line Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>#@item.OrderId</td>
                        <td>@item.OrderDate.ToString("MM/dd/yyyy")</td>
                        <td>@item.CustomerName</td>
                        <td>@item.ProductName</td>
                        <td>@item.Category</td>
                        <td>@item.Quantity</td>
                        <td>$@item.UnitPrice.ToString("F2")</td>
                        <td>$@item.LineTotal.ToString("F2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
</div>