@model IEnumerable<ShopTrackPro.Core.DTOs.Dashboard.ProductSalesDto>
@{
    ViewData["Title"] = "Product Sales Analysis";
}

<div class="container mt-4">
    <h2>Product Sales Analysis</h2>
    <p class="text-muted">LINQ Aggregation: GroupBy Product, Sum Quantities & Revenue</p>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Total Sold</th>
                        <th>Total Revenue</th>
                        <th>Avg per Sale</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.ProductName</td>
                            <td>@product.TotalSold</td>
                            <td>$@product.TotalRevenue.ToString("F2")</td>
                            <td>$@((product.TotalRevenue / Math.Max(product.TotalSold, 1)).ToString("F2"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>