@model List<HostelManagement.MVC.Models.StudentViewModel>
@{
    ViewData["Title"] = "Students";
}

<h2>Students</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Department</th>
                <th>Room</th>
                <th>Staff</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Department</td>
                    <td>@student.RoomNumber</td>
                    <td>@student.StaffName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@student.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No students found.</p>
}
