@model List<HostelManagement.MVC.Models.RoomViewModel>
@{
    ViewData["Title"] = "Rooms";
}

<h2>Rooms</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Room Number</th>
                <th>Capacity</th>
                <th>Students</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.RoomNumber</td>
                    <td>@room.Capacity</td>
                    <td>@room.Students.Count</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@room.RoomId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No rooms found.</p>
}
